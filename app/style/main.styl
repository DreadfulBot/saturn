//ELEMENTS
.logo
	width: 150px
	background: #f9c438
	transform: skew(35deg, 0deg);
	min-height 80px
	border-radius 5px
	padding-top: 10px
	margin-right: 10px
	&:hover
		background #8b6500
	@media (max-width 1247px)
		display: none
	img
		width: 40%
		transform: skew(-35deg, 0deg);

.nav
	display: inline-block
	background #000
	transform: skew(35deg, 0deg);
	border-radius 5px
	margin: 0
	padding: 0
	list-style none
	text-align left
	padding-left: 20px
	font-size 14px
	overflow: hidden
	@media (max-width 1088px)
		font-size 11px
	li
		transform: skew(-35deg, 0deg)
		display: inline-block
		border-bottom 2px solid transparent
		&:last-child
			position: relative
			padding-left: 10px
			vertical-align: top
			a
				padding-top: 10px
				padding-bottom: 0
			&:hover
				border-color transparent
			&:active
				background: #000
		&:hover
			border-color #f9c438
		&:active
			background: #ccc
	a.nav-items
		text-decoration: none
		color #fff
		display: block
		padding 20px 20px
		padding-bottom 18px
		transition 0.2s



